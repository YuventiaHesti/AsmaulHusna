<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.TentangActivity"
    android:padding="20dp"
    android:background="@drawable/back3">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"
        android:alpha="0.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:textStyle="bold"
            android:textSize="50dp"
            android:text="Mengenal Asmaul Husna"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginBottom="10dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="40dp"
                android:gravity="center|top"
                android:textSize="30dp"
                android:text="Aplikasi ini dimaksudkan sebagai media pembelajaran untuk anak-anak agar lebih mudah mengenal Asmaul Husna dengan baik."/>
        </ScrollView>
    </LinearLayout>



</RelativeLayout>