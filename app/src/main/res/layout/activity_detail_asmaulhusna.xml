<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DetailAsmaulHusna"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/back3"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorWhite"
        android:alpha="0.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textnomor"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="4"/>
                    <ImageView
                        android:id="@+id/gambar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@color/colorAccent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textnama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ar-Rahman"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        />
                    <TextView
                        android:id="@+id/textarti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yang Maha Pemurah"
                        android:gravity="center"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgplay"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/play_button"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/imgstop"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/stop"
                        android:layout_weight="1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textpenjelasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Penjelasan"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/textjudul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perhatian Nabi Sulaiman pada Bangsa Semut"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        />
                    <ImageView
                        android:id="@+id/imgkisah"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:src="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/textkisah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Panjang Banget"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <Button
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Favorite"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/btnFav"
                        android:background="@drawable/button_rounded_primary"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>